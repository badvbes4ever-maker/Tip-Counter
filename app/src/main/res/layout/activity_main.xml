<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/RadioG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checkedButton="@id/RB_5P"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RB_5P"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5%" />

            <RadioButton
                android:id="@+id/RB_10P"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10%" />

            <RadioButton
                android:id="@+id/RB_15P"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15%" />

            <RadioButton
                android:id="@+id/RB_USERP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <EditText
            android:id="@+id/ETN_UserPercentage"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            tools:text="3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="%"
            android:textSize="20sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/ETN_UserInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Введите счёт"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/TvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Сумма чаевых: 500"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/ETN_UserInput"
        app:layout_constraintStart_toStartOf="@+id/ETN_UserInput"
        app:layout_constraintTop_toBottomOf="@+id/ETN_UserInput" />

    <Button
        android:id="@+id/Bt_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Посчитать"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TvAllStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/Bt_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TvTip" />
</androidx.constraintlayout.widget.ConstraintLayout>